# end study
function find-aux() {
  find $1 -type d -name $2 -print -quit 2> /dev/null
}
function jmp() {
  if [[ -z $1 ]] ; then
	cd $HOME
	return
  fi
  local root=$1
  local dir=$2
  if [[ -z $dir ]] ; then
	root=$HOME
	dir=$1
  fi
  if [[ ! -e $root ]] ; then
	root=`find-aux $HOME $root`
  fi
  cd `find-aux $root $dir`
}
alias jmp.='jmp .'
alias jmpr='jmp /'

