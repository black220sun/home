    alias ecfg='emacs -nw ~/.emacs'
    alias ez='emacs -nw ~/.zshrc'
    alias ea='emacs -nw ~/.aliases'
    alias el='emacs -nw **/*.log'
    alias el.='emacs -nw *.log'
    alias et='emacs -nw *.txt'
fi

