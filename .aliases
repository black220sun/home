# path
alias ~='cd $HOME'
alias cd-='cd -'
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
alias .......='cd ../../../../../..'
alias cdr='cd /'
function find-aux() {
    $SUDO find $1 -type d -name $2 -print -quit 2> /dev/null
}
function jmp() {
    if [[ -z $1 ]] ; then
	cd $HOME
	return
    fi
    local root=$1
    local dir=$2
    if [[ -z $dir ]] ; then
	root=$HOME
	dir=$1
    fi
    if [[ ! -e $root ]] ; then
       root=`find-aux $HOME $root`
    fi
    cd `find-aux $root $dir`
}
alias jmp.='jmp .'
alias jmpr='jmp /'

# sudo
SUDO=''
if (( $+commands[sudo] )) ; then
    alias s='sudo'
    if [[ $EUID -ne 0 ]] ; then
	SUDO='sudo'
    fi
fi

# apt
if (( $+commands[apt] )) ; then
    alias apt='$SUDO apt'
    alias pac='apt install'
    alias pacs='apt search'
    alias pacr='apr remove'
    alias pacu='apt update && apt upgrade'
fi

# pacman
if (( $+commands[pacman] )) ; then
    alias pacman='$SUDO pacman'
    alias pac='pacman -S --needed'
    alias pacs='pacman -Ss'
    alias pacr='pacman -Rs'
    alias pacu='pacman -Syu'
fi

# yum
if (( $+commands[yum] )) ; then
    alias yum='$SUDO yum'
    alias pac='yum install'
    alias pacs='yum search'
    alias pacr='yum remove'
    alias pacu='yum upgrade'
fi

# emacs
