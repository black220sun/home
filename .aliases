alias psag='ps aux | grep'
function psk() {
    if [[ -z $2 ]]
    then
        $SUDO kill -KILL $(psg $1 | cut -f1 -d' ')
    else
        $SUDO kill -KILL $(psg $1 | cut -f2 -d' ')
    fi
    psg $1
}
function psak() {
    if [[ -z $2 ]]
    then
        $SUDO kill -KILL $(psag $1 | cut -f2 -d' ')
    else
        $SUDO kill -KILL $(psag $1 | cut -f3 -d' ')
    fi
    psag $1
}
function showdot() {
    local file=$(tempfile)
    local delay=${2:-2}
    (dot -Tsvg $1 -o ${file} && firefox ${file}&) && sleep ${delay} || true
    /bin/rm ${file}
}

